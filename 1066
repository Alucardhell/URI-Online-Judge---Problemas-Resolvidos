#include<bits/stdc++.h>
using namespace std;

int main()
{
	int i, x[5], p = 0, imp = 0, po = 0, n = 0;

	for (i = 0; i < 5; i++)
	{

		cin >> x[i];

	}

	for (i = 0; i < 5; i++)
	{

		if (abs(x[i]) % 2 == 0)
		{

			p++;

		}
		else
		{
			imp++;
		}

		if (x[i] > 0)
		{

			po++;

		}
		else if (x[i] < 0)
		{

			n++;

		}

	}

	printf ("%d valor(es) par(es)\n", p);
	printf ("%d valor(es) impar(es)\n", imp);
	printf ("%d valor(es) positivo(s)\n", po);
	printf ("%d valor(es) negativo(s)\n", n);

}
