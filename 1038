#include<bits/stdc++.h>
using namespace std;

int main ()
{


	int co, qua;

	cin >> co >> qua;

	if (co == 1)
	{

		printf ("Total: R$ %0.2f\n", float(qua * 4.00));

	}

	if (co == 2)
	{

		printf ("Total: R$ %0.2f\n", float(qua * 4.50));

	}
	if (co == 3)
	{

		printf ("Total: R$ %0.2f\n", float(qua * 5.00));

	}
	if (co == 4)
	{

		printf ("Total: R$ %0.2f\n", float(qua * 2.00));

	}
	if (co == 5)
	{

		printf ("Total: R$ %0.2f\n", float(qua * 1.50));

	}


}
